<div class= "container">
<h2><%= I18n.t('Resend unlock instructions') %></h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "#{ I18n.t('unlock instructions')}", class: 'btn btn-large btn-primary' %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
</div>
